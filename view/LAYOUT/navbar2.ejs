<!-- Chatbot Container (Hidden by default) -->
<div class="chatbot-container" id="chatbot">
  <div class="chatbot-header">
    <h5>PlantBot</h5>
  </div>
  <div class="chatbot-body" id="chatbot-body">
    <!-- Messages will be appended here -->
  </div>
  <div class="chatbot-footer">
    <input type="text" id="chat-input" placeholder="Ask me anything..." />
    <button onclick="sendMessage()">Send</button>
  </div>
</div>

<!-- Your existing scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="script.js"></script>

<!-- Chatbot Script -->
<script>
  const chatbot = document.getElementById('chatbot');
  const chatbotBody = document.getElementById('chatbot-body');
  const chatInput = document.getElementById('chat-input');

  // Open the chatbot
  function openChatbot() {
    chatbot.style.display = 'flex';
  }

  // Send a message to the chatbot
  async function sendMessage() {
    const message = chatInput.value.trim();
    if (message) {
      appendMessage(message, 'user');
      chatInput.value = '';
      await getBotResponse(message);
    }
  }

  // Append messages to the chatbot body
  function appendMessage(message, sender) {
    const messageDiv = document.createElement('div');
    messageDiv.classList.add('message', sender === 'user' ? 'user-message' : 'bot-message');
    messageDiv.textContent = message;
    chatbotBody.appendChild(messageDiv);
    chatbotBody.scrollTop = chatbotBody.scrollHeight;  // Scroll to the bottom
  }

  // Get response from the OpenAI API
  async function getBotResponse(userMessage) {
    const response = await fetch('https://api.openai.com/v1/completions', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'Authorization': `Bearer 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`
      },
      body: JSON.stringify({
        model: 'text-davinci-003',
        prompt: `You are a helpful chatbot answering questions related to plants, gardening, and agriculture. User: ${userMessage}`,
        max_tokens: 100,
        temperature: 0.7,
      }),
    });
    const data = await response.json();
    const botMessage = data.choices[0].text.trim();
    appendMessage(botMessage, 'bot');
  }

  // Open the chatbot automatically when the page loads
  window.onload = () => openChatbot();
</script>

</body>
